{{#if logged_in}}
	<div class="container-fluid profile-style">
		<div class="username">
			<p>
				Username
			</p>
		</div>
		<div class="post-number">
			<p>
				Posts: 7
			</p>
		</div>
	</div>
<div class = "new-post-container container-fluid">
      <button type="button" class="new-post btn btn-primary btn-lg ">Post new item&nbsp;&nbsp;&nbsp;<img src = "/assets/images/plus-sign.PNG"></button>
</div>

<div class="container text-center">
  <div class="row" style="margin-top: 30px;">
  {{#each items as |item| }}
    <div class="col-sm-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"> {{item.name}}</h5>
            <img src={{item.image_url}} class="card-img-top" alt="...">
            <p class="card-text"> {{item.description}}</p>
            <button class="octo-cursor" style="border:none; background-color: rgba(0, 0, 0, 0);"><img class="octo-cursor" src="/assets/images/dibs.PNG" width="87px" height="40px"></button>
        </div>
      </div>
    </div>
  {{/each}}
  </div>
</div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

{{/if}}